{
  "globs": [
    "*.md",
    "docs/**/*.md"
  ],
  "ignores": [
    ".venv/**",
    "venv/**",
    "node_modules/**",
    "__pycache__/**",
    "htmlcov/**",
    ".mypy_cache/**",
    ".pytest_cache/**",
    "dist/**",
    "build/**",
    ".cursor/**",
    "tests/**"
  ],
  "config": {
    "default": true,
    "MD013": {
      "line_length": 160,
      "heading_line_length": 160,
      "code_block_line_length": 160,
      "tables": false
    },
    "MD025": false,
    "MD033": {
      "allowed_elements": [
        "br",
        "details",
        "summary"
      ]
    },
    "MD046": {
      "style": "fenced"
    },
    "MD024": {
      "siblings_only": true
    }
  }
}
