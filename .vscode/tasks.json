{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup Git Hooks",
      "type": "shell",
      "command": "${workspaceFolder}/setup-hooks.sh",
      "presentation": {
        "reveal": "silent",
        "clear": true
      },
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Run All Pre-commit Checks",
      "type": "shell",
      "command": "poetry run pre-commit run --all-files",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run Ruff Check",
      "type": "shell",
      "command": "poetry run pre-commit run ruff --all-files",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run Pre-commit on Staged Files",
      "type": "shell",
      "command": "poetry run pre-commit run",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Git Commit with Poetry",
      "type": "shell",
      "command": "cd ${workspaceFolder} && poetry run git commit",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}
